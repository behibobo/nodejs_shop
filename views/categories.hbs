{{> partials/menu}}
<div class="col-lg-9">
    <div class="col-lg-12">
        <h2>Categories</h2>
    </div>
    <div class="col-lg-12 search_bar">
        <div class="input-group">
            <input type="text" name="category_filter" id="category_filter" class="form-control input-lg" placeholder="Filter categorys">
            <span class="input-group-btn">
                <button class="btn btn-success btn-lg" id="btn_category_filter">Filter</button>
                <a href="/admin/categorys" class="hidden-xs btn btn-warning btn-lg"><i class="fa fa-times" aria-hidden="true"></i></a>
            </span>
        </div>
        <p class="text-warning top-pad-10">Categories can be filtered by: category title or category description keywords</p>
    </div>
    {{#if results}}
        <div class="col-lg-12">
            <ul class="list-group">
                <li class="list-group-item">
                    <strong>Categories - <span class="text-danger">Filtered term: {{searchTerm}} </span></strong>
                </li>
                {{#each results}}
                    <li class="list-group-item">
                        <h4 class="pull-right text-danger" style="padding-left: 10px;"><a class="text-danger" href="/admin/category/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this category?');"> <i class="fa fa-trash-o"></i></a></h4>
                        <h5><a href="/admin/category/edit/{{this._id}}">{{this.categoryTitle}}</a></h5>
                    </li>
                {{/each}}
            </ul>
        </div>
    {{else}}
        <div class="col-lg-12">
            <ul class="list-group">
                <li class="list-group-item">
                    <strong>Recent categorys</strong>
                </li>
                {{#each top_results}}
                    <li class="list-group-item">
                        <h4 class="pull-right" style="padding-left: 10px;"><a class="text-danger" href="/admin/category/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this category?');"> <i class="fa fa-trash-o"></i></a></h4>
                        <h5><a href="/admin/category/edit/{{this._id}}">{{this.categoryTitle}}</a></h5>
                    </li>
                {{/each}}
            </ul>
        </div>
    {{/if}}
</div>
