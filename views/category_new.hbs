
<div class="col-lg-9">
    <form method="post" class="form-horizontal" id="insert_form" action="/admin/category/insert" data-toggle="validator">
        <div class="col-lg-12">
            <div class="page-header">
                <div class="pull-right">
                    <button id="frm_edit_category_save" class="btn btn-success" type="submit">Add category <i class="fa fa-plus"></i></button>
                </div>
                <h2>New Category</h2>
            </div>
            <div class="form-group">
                <label for="frmCategoryTitle" class="col-sm-2 control-label">Category title *</label>
                <div class="col-sm-10">
                    <input type="text" id="frmCategoryTitle" name="frmCategoryTitle" class="form-control" maxlength="200" value="{{categoryTitle}}" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Slug</label>
                <div class="col-sm-10">
                    <div class="input-group">
                        <input type="text" class="form-control" name="frmCategoryPermalink" id="frmCategoryPermalink" placeholder="Permalink for the article" value={{categoryPermalink}}>
                        <span class="input-group-btn">
                            <button class="btn btn-success" id="validate_category_permalink" type="button">Validate</button>
                        </span>
                    </div>
                    <p class="help-block">This sets a readable URL for the category</p>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.2/summernote.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.2/summernote.css" rel="stylesheet">
<script>
    $(document).ready(function() {
        $('#editor').summernote({
            height: 300,
            minHeight: null
        });
    });
</script>
