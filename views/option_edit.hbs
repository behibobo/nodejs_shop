{{> partials/menu}}
<div class="col-lg-9">
    <form method="post" class="form-horizontal" id="insert_form" action="/admin/option/update" data-toggle="validator">
        <div class="col-lg-12">
            <div class="page-header">
                <div class="pull-right">
                    <button id="frm_edit_product_save" class="btn btn-success">Save Option <i class="fa fa-floppy-o"></i></button>
                </div>
                <h2>Edit Option</h2>
            </div>
            <div class="form-group">
                <label for="frmProductTitle" class="col-sm-2 control-label">OptionName *</label>
                <div class="col-sm-10">
                    <input type="text" name="frmOptionTitle" class="form-control" maxlength="200" value="{{result.optionTitle}}" required/>
                </div>
            </div>

            <div class="form-group">
                <label for="frmProductTags" class="col-sm-2 control-label">Values</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="frmProductTags" name="frmOptionValues" value="{{result.optionValues}}">
                </div>
            </div>

        </div>
        <input type="hidden" name="frmOptionId" id="frmOptionId" value="{{result._id}}" />
    </form>
</div>
